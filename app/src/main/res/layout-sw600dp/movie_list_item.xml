<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_columnSpan="1"
    android:layout_columnWeight="1"
    android:background="@android:color/white"
    android:stateListAnimator="@drawable/translation_selector"
    android:foreground="@drawable/transparent_rectangular_ripple"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:id="@+id/left_hightlight"
            android:visibility="gone"
            android:background="@color/moviesred"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/right_hightlight"
            android:visibility="gone"
            android:background="@color/moviesred"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/bottom_hightlight"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@color/moviesred"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivMoviePoster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:transitionName="profile" />

            <com.tutorials.udacity.popularmovies.CustomViews.CustomFontTextView
                android:id="@+id/tvMovieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:fontName="Roboto-Regular.ttf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/rlPopularity"
                    >

                    <ImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_action_toggle_star_half"

                        />

                    <com.tutorials.udacity.popularmovies.CustomViews.CustomFontTextView
                        android:id="@+id/tvPopularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivIcon"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ivIcon"
                        android:paddingBottom="6dp"
                        android:textSize="12sp"
                        android:text="54.12%"
                        app:fontName="Roboto-Regular.ttf" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/rlRating"
                    android:layout_toRightOf="@+id/rlPopularity"
                    >

                    <ImageView
                        android:id="@+id/ivRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_action_editor_insert_emoticon"

                        />

                    <com.tutorials.udacity.popularmovies.CustomViews.CustomFontTextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivRating"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ivRating"
                        android:paddingBottom="6dp"
                        android:textSize="12sp"
                        android:text="54.12%"
                        app:fontName="Roboto-Regular.ttf" />

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>
        </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>